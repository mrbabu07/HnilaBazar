PORT=5000
MONGO_URI=your_mongodb_connection_string_here

# Firebase Admin SDK
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_PRIVATE_KEY="your_firebase_private_key_here"

# Email Configuration (SMTP)
# IMPORTANT: Use your own Gmail account for sending emails
# 
# Steps to setup Gmail SMTP:
# 1. Go to your Google Account settings
# 2. Enable 2-Factor Authentication
# 3. Go to Security > 2-Step Verification > App passwords
# 4. Generate an app password for "Mail"
# 5. Use that 16-character password below (no spaces)
#
# Guide: https://support.google.com/accounts/answer/185833
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_16_character_app_password
APP_NAME=HnilaBazar
APP_EMAIL=your_email@gmail.com
FRONTEND_URL=http://localhost:5173

# Push Notifications (VAPID Keys)
# Generate new keys using: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_EMAIL=mailto:your_email@example.com
